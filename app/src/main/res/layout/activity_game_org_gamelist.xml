<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".game_org_gamelist">


    <!-- nav bar -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="394dp"
        android:layout_height="57dp"
        android:background="#424242"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="1dp"
        android:text="@string/game"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="1dp"
        android:text="@string/organizer"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="1dp"
        android:text="@string/tournament"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="1dp"
        android:text="@string/home"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_black" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="33dp"
        android:layout_height="27dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cup_black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/console_white" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/organizer_black" />

    <!-- nav bar ends -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="84dp"
        android:clickable="true"
        android:onClick="create_new_game"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="129dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cod_mw_name1"
            android:layout_width="140dp"
            android:layout_height="27dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:text="@string/mobile_legends"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit_btn_t11"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:onClick="update_new_game"
            android:text="EDIT"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <Button
            android:id="@+id/delete_btn_t12"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:text="DELETE"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/edit_btn_t1"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <ImageView
            android:id="@+id/imageView112"
            android:layout_width="127dp"
            android:layout_height="162dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-18dp"
            app:srcCompat="@drawable/moblielegends" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ID_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:text="@string/org_games"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:text="@string/add_games"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_tournament" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="16dp"
        android:text="@string/add_a_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton2" />

    <TextView
        android:id="@+id/match_org_list_round1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="76dp"
        android:text="@string/mobile_legends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="129dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cod_mw_name2"
            android:layout_width="89dp"
            android:layout_height="27dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:text="@string/game_name_cod_mw"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit_btn_t12"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:onClick="update_new_game"
            android:text="EDIT"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <Button
            android:id="@+id/delete_btn_t13"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:text="DELETE"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/edit_btn_t1"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <ImageView
            android:id="@+id/imageView113"
            android:layout_width="127dp"
            android:layout_height="162dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-18dp"
            app:srcCompat="@drawable/cod" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="129dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cod_mw_name"
            android:layout_width="89dp"
            android:layout_height="27dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:text="@string/valorant_name"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit_btn_t1"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:onClick="update_new_game"
            android:text="EDIT"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <Button
            android:id="@+id/delete_btn_t1"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grey"
            android:text="DELETE"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/edit_btn_t1"
            app:layout_constraintTop_toBottomOf="@+id/tournament_name_31" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="127dp"
            android:layout_height="162dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-18dp"
            app:srcCompat="@drawable/valo" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>