<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_marginBaseline="100dp"
    tools:context=".team_home">

    <TextView
        android:id="@+id/cr_tournamet_topic6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Teams"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="360dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cr_tournamet_topic7">

        <ImageView
            android:id="@+id/Teamimage"
            android:layout_width="121dp"
            android:layout_height="91dp"
            android:layout_marginVertical="13dp"
            app:srcCompat="@drawable/codenamealpha" />

        <TextView
            android:id="@+id/playernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="156dp"
            android:text="Number of Players: 20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:text="CodeNameAlpha"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/matchcount"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginVertical="60dp"
            android:layout_marginStart="156dp"
            android:text="Mtaches Won: 20"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cr_tournamet_topic7"
        android:layout_width="76dp"
        android:layout_height="26dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif"
        android:text="My Teams"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="288dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cr_tournamet_topic6">

    </SearchView>

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="40dp"
            android:text="Create a team"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="25dp"
            app:srcCompat="@drawable/ic_baseline_add_circle_24" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="360dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <ImageView
            android:id="@+id/Team2image"
            android:layout_width="121dp"
            android:layout_height="91dp"
            android:layout_marginVertical="13dp"
            app:srcCompat="@drawable/codenamealpha"
            tools:srcCompat="@drawable/red" />

        <TextView
            android:id="@+id/playernum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="156dp"
            android:text="Number of Players: 20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teamname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:text="Shadow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/matchcount1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginVertical="60dp"
            android:layout_marginStart="156dp"
            android:text="Mtaches Won: 20"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="92dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="196dp"
            android:text="Delete" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>