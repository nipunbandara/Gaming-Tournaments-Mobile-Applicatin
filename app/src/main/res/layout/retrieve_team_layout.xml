<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_margin="20dp">


<ImageView
            android:id="@+id/Teamimage"
            android:layout_width="121dp"
            android:layout_height="91dp"
            android:layout_marginVertical="13dp"
            android:onClick="user_team_managepage"
            android:src="@drawable/codenamealpha"/>

        <TextView
            android:id="@+id/playernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="156dp"
            android:text="@string/num_pl_20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:onClick="user_team_managepage"
            android:text="@string/code_name_alpha"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/matchcount"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginVertical="60dp"
            android:layout_marginStart="156dp"
            android:text="@string/maches_won20"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

